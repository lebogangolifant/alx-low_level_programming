# Makefile that includes compiler flags 

CC = gcc
SRC_DIR = src
SRC = $(SRC_DIR)/main.c $(SRC_DIR)/school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

clean: 
	$(RM) -rf *~ $(NAME)

oclean: 
	$(RM) -rf $(OBJ)

fclean: clean oclean

re: oclean all
