#!/usr/bin/make -f
# Makefile for building, cleaning, and managing the executable file

CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
RM = rm

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

$(OBJ): %.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	$(RM) -rf *~ $(NAME)

oclean:
	$(RM) -rf $(OBJ)

fclean: clean oclean

re: oclean all

$(shell find -name m.h) :
	@echo "Header file m.h not found, stopping compilation."
	@exit 1
